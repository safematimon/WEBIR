                <script type="text/javascript">
                    function jsnmberformat(num) {
                        return num.tostring().replace(/\b(?=(\d{3})+(?!\d))/g, ",");
                    }
                    function fancyboxopen(mobile = 0) {
                        var width = mobile == 1 ? '320px' : '520px';

                        $.fancybox.open({
                            src: 'https://kukr2.lib.ku.ac.th/kukr_es/drought/member/login?iframe=true',
                            type: 'iframe',
                            iframe: {
                                "preload": false,
                                "css":
                                        {
                                            "width": width,
                                            "height": "520px"
                                        }
                            },
                            beforeclose: function () {
                                var statuslogin = $(".fancybox-iframe").contents().find('#checkstatuslogin');
                                if (typeof statuslogin[0] != 'undefined' && typeof statuslogin[0].value != 'undefined' && statuslogin[0].value == 1) {
                                    parent.location.reload(true);
                                }
                            }

                        });

                    }
                </script>



