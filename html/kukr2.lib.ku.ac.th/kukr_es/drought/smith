<script type="text/javascript">

    jquery(document).ready(function($) {
        $.ajaxqueue = [];
        var que = $.ajaxqueue;

        $.ajaxsetup({
            beforesend: function(){
                if (this.queue) {
                    que.push(this);
                }
                else {
                    return true;
                }
                if (que.length > 1) {
                    return false;
                }
            },
            complete: function(){
                que.shift();
                var newreq = que[0];
                if (newreq) {
                    // setup object creation should be automated 
                    // and include all properties in queued ajax request
                    // this version is just a demonstration. 
                    var setup = {
                        url: newreq.url,
                        success: newreq.success
                    };
                    $.ajax(setup);
                }
            }
        });

        function genimgcover(mdl_id, bibid) {
            var img_id = '#img_' + mdl_id + '_' + bibid;
            var loading_id = '#loader_' + mdl_id + '_' + bibid;
            // $.post('https://kukr2.lib.ku.ac.th/kukr_es/drought' + '/tools/gencover/' + bibid, function (res) {
            //     $(loading_id).hide();
            //     $(img_id).attr('src', res);
            //     $(img_id).show();
            // });
            $.ajax({
                queue: true,
                url: 'https://kukr2.lib.ku.ac.th/kukr_es/drought' + '/tools/gencover/' + bibid,
                success: function(res) {
                    $(loading_id).hide();
                    $(img_id).attr('src', res);
                    $(img_id).show();
                }
            });
        }


   
        $('.pre-img').each(function (key, value) {
            var bibid = $(value).attr('bibid');
            var mdl_id = $(value).attr('mdl_id');

            genimgcover(mdl_id, bibid);
        });
    });

</script>
<script type="text/javascript">


    var esapp = angular.module('esapp', []);
    esapp.value('phpdata', {"baseurl":"https:\/\/kukr2.lib.ku.ac.th\/kukr_es\/drought\/search\/","baseurlresult":"https:\/\/kukr2.lib.ku.ac.th\/kukr_es\/drought\/essearch\/","option_list":{"title":"\u0e0a\u0e37\u0e48\u0e2d\u0e40\u0e23\u0e37\u0e48\u0e2d\u0e07","author":"\u0e0a\u0e37\u0e48\u0e2d\u0e1c\u0e39\u0e49\u0e41\u0e15\u0e48\u0e07","affiliation":"\u0e17\u0e35\u0e48\u0e2d\u0e22\u0e39\u0e48\u0e1c\u0e39\u0e49\u0e41\u0e15\u0e48\u0e07","corp_author_text":"\u0e2b\u0e19\u0e48\u0e27\u0e22\u0e07\u0e32\u0e19","keyword_text":"\u0e04\u0e33\u0e2a\u0e33\u0e04\u0e31\u0e0d","isbn_issn_text":"isbn\/issn","serial_title":"\u0e0a\u0e37\u0e48\u0e2d\u0e27\u0e32\u0e23\u0e2a\u0e32\u0e23"}});


    esapp.directive('ngenter', function () {
        return function (scope, element, attrs) {
            element.bind("keydown keypress", function (event) {
                if (event.which === 13) {
                    scope.$apply(function () {
                        scope.$eval(attrs.ngenter, {'event': event});
                    });
                    event.preventdefault();
                }
            });
        };
    });

    esapp.controller('escontroller', function ($scope, $http, $filter, phpdata, $timeout) {

        var api_url = phpdata.baseurl;
        $scope.urles = phpdata.baseurlresult;

        $scope.option_list = phpdata.option_list;

        $scope.loading_data = false;


        $scope.query = {
            'main': '',
            'option': '',
        }


        var fnc_search = function () {
            if (typeof $scope.cur_page === 'undefined') {
                return;
            }

            $scope.all_bibid_explode = '';

            if ($scope.query.main == '') {
                alert('กรุณาระบุคำค้น');
                return;
            }

            $scope.loading_data = true;
            $scope.favorite_view = false;
            $scope.is_favorited = false;
            location.hash = '#top';

            $scope.resutl_text = $scope.query.main;


            $http.post(api_url + 'find/' + $scope.cur_page,
                    'data=' + encodeuricomponent(angular.tojson($scope.query)),
                    {headers: {'content-type': 'application/x-www-form-urlencoded;charset=utf-8;'}}
            ).then(function (res) {
                $scope.data = res.data;
                $scope.list_data = $scope.data.result;
                $scope.all_row = $scope.data.metadata.total;
                $scope.all_page = $scope.data.metadata.all_page;

                $scope.all_bibid_explode = $scope.data.all_bibid_explode;


                $scope.loading_data = false;
            });

        }


        $scope.searchmain = function () {
            $scope.cur_page = 1;

            fnc_resetfilter();
            fnc_search();
            fnc_getfilter();

        }


        var fnc_init = function () {

        }


        fnc_init();

    });


</script>


